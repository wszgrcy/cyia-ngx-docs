    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4211",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "docs",
            // "skipFiles": [
            //   "<node_internals>/**"
            // ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceRoot}/scripts/generate-docs/index.ts"
            ],
            "env": {
                "TS_NODE_PROJECT": "${workspaceRoot}/scripts/generate-docs/tsconfig.json"
            }
            // "outFiles": [
            //   "${workspaceFolder}/**/*.js"
            // ]
        }
    ]
}